<div>
  <label for="methods">Choose methods/props:</label>

  <select id="methods" {{on "change" this.onSelect}}>
    {{#each this.widgets as |widget|}}
      <option value={{widget.name}} selected={{eq widget.name this.selectedWidget}}>{{widget.label}}</option>
    {{/each}}
  </select>

  {{component this.selectedWidget}}
</div>